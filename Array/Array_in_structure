#include<stdio.h>
#include<stdlib.h>

struct team
{
    char team_name[15];
    char player_name[15];
    int highest_score;
};
struct team player[3];


int main()
{
    struct team player[3];
    read(player);
    display(player);
    highest_score(player);
    return 0;
}

void read(struct team player[3])
{
    for(int i=0;i<3;i++)
    {
        printf("Enter the name if the team, name if the player and the highest score\n");
        scanf("%s%s%d",player[i].team_name,player[i].player_name,&player[i].highest_score);
    }
}

void display(struct team player[3])
{
    for(int i=0;i<3;i++)
    {
        printf("The name if the team is: %s\n",player[i].team_name);
        printf("Enter the name if the player is: %s\n",player[i].player_name);
        printf("Enter the name if the highest score is: %d\n",player[i].highest_score);
        printf("---------------------------------------------------------------------------------\n");
    }
}

void highest_score(struct team player[3])
{
    int i,h=0;
    for(i=1;i<3;i++)
    {
        if(player[i].highest_score>h)
        {
            h=player[i].highest_score;
        }
    }
    printf("The highest score is %d\n",h);
}

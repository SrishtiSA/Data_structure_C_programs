#include<stdio.h>

int main()
{
    float ar[50],s,x;
    int n;

    printf("Enter the degree of the polynomial: ");
    scanf("%d",&n);
    printf("Enter the value of x: ");
    scanf("%f",&x);
    printf("Enter the %d co-efficient of the polynomial:\n",(n+1));
    for(int i=0;i<=n;i++)
    {
        scanf("%f",&ar[i]);
    }
    s=ar[0];
    for(int i=1;i<=n;i++)
    {
        s=s*x+ar[i];
    }
    printf("\nThe value of the polynomial for the x= %.2f is %.2f",x,s);
    return 0;
}
